---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import HeroBanner from '../components/HeroBanner/HeroBanner.astro';
import ContactForm from '../components/ContactForm/ContactForm.jsx';
import ServicesWidget from '../components/ServicesWidget/ServicesWidget.jsx';

---

<Layout title="Homepage | Superior Cleaning Services">
	<main>
		<HeroBanner />

    <ServicesWidget />

    <section id="contact-us">
      <h2>Contact us</h2>
      <p>Leave the dirty work to us - no job is too small! We would love to hear from you.</p>
      <ContactForm client:load/>
    </section>
	</main>
</Layout>

<style>
	main {
		margin: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
	}

  #contact-us {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: white;
    background: rgb(50, 50, 209);
    width: 100%;
  }

  #contact-us h2 {
    font-size: 3rem;
    font-family: 'Vollkorn';
  }

</style>
